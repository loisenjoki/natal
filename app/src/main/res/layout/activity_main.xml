    <Button
        android:id="@+id/btnread"
        android:layout_width="272dp"
        android:layout_height="89dp"
        android:layout_marginTop="282dp"
        android:layout_marginBottom="04dp"
        android:background="@drawable/round_corner_button_yellow"
        android:text="Tap patient Card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnwrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="3dp"
        android:clickable="true"
        android:elevation="10dp"
        app:backgroundTint="@color/floating_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnread"
        app:srcCompat="@drawable/ic_add_patient_24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>